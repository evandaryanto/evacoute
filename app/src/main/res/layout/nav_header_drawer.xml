<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="32dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_header_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/refuge_evan"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFF"/>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawer_header_pic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:text="Pandu Kartika Putra"
        android:id="@+id/drawer_header_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header_name"
        android:layout_toRightOf="@id/drawer_header_pic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Laki-laki / 18 tahun"
        android:id="@+id/drawer_header_gender_age"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawer_header_pic"
        android:layout_below="@id/drawer_header_gender_age"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="italic"
        android:text="Korban Bencana"
        android:id="@+id/drawer_header_role"/>

</RelativeLayout>
